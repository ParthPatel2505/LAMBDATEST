FROM gitpod/workspace-full:latest

# Install dependencies for Playwright
RUN npm install -g npm@latest \
    && apt-get update \
    && apt-get install -y libx11-xcb-dev libfontconfig1 libxcomposite1 libxcursor1 libxdamage1 libxi6 libxtst6 libnss3 libxrandr2 libxshmfence1 libasound2 libpangocairo-1.0-0 libatk1.0-0 libcups2 libdbus-1-3

# Install Playwright browsers
RUN npx playwright install --with-deps